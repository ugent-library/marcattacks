{
  "name": "marcattacks",
  "version": "2.2.11",
  "description": "A powerful streaming MARC21 to RDF converter with JSONata transformation and S3 support.",
  "keywords": [
    "marc21",
    "iso2709",
    "rdf",
    "bibframe",
    "jsonata",
    "notation3",
    "linked-data",
    "marcxml",
    "streaming",
    "s3",
    "metadata-conversion"
  ],
  "main": "dist/attacker.js",
  "type": "module",
  "author": "",
  "repository": "https://codeberg.org/phochste/marcattacks.git",
  "bin": {
    "marcattacks": "./dist/command.js",
    "globtrotr": "./dist/globber.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build:ts": "npx tsc",
    "build:watch": "npx tsc -w",
    "demo:alephseq": "npx marcattacks --to alephseq data/sample.xml",
    "demo:json": "npx marcattacks --to json data/sample.xml",
    "demo:jsonl": "npx marcattacks --to jsonl data/sample.xml",
    "demo:rdf": "npx marcattacks --to rdf --map marc2rdf data/sample.xml",
    "demo:jsonld": "npx marcattacks --to jsonl --param fix=./demo/marc2rdf.jsonata data/sample.xml",
    "demo:biblio:one": "npx marcattacks --from json --info ./data/biblio.json",
    "demo:biblio:all": "npx marcattacks --from jsonl --info https://biblio.ugent.be/exports/publications.json",
    "demo:parquet": " npx marcattacks ./data/sample.xml --to parquet --map avram --param schema=./demo/avram.schema --info --out ./data/avram.parquet",
    "docker:build": "docker build . -t hochstenbach/marcattacks:v0.0.1",
    "docker:run": "docker run --rm -v `pwd`/data:/app/data -it hochstenbach/marcattacks:v0.0.1 --to rdf --map rdf data/sample.xml",
    "docker:push": "docker push hochstenbach/marcattacks:v0.0.1",
    "postversion": "npm publish && git push && git push --tags"
  },
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/n3": "^1.26.1",
    "@types/node": "^24.10.1",
    "@types/sax": "^1.2.7",
    "@types/ssh2-sftp-client": "^9.0.5",
    "@types/stream-json": "^1.7.8",
    "@types/streamify-string": "^1.0.4",
    "@types/tar-stream": "^3.1.4",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "jest-xml-matcher": "^1.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@dsnp/parquetjs": "^1.8.7",
    "@rdfjs/types": "^1.1.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.4",
    "jsonata": "^2.1.0",
    "jsonld": "^9.0.0",
    "log4js": "^6.9.1",
    "marcjs": "^3.0.2",
    "n3": "^1.26.0",
    "rdf-parse": "^4.0.0",
    "sax": "^1.4.3",
    "ssh2-sftp-client": "^12.0.1",
    "stream-chain": "^3.4.0",
    "stream-json": "^1.9.1",
    "streamify-string": "^1.0.1",
    "tar-stream": "^3.1.7",
    "uuid": "^13.0.0"
  }
}
